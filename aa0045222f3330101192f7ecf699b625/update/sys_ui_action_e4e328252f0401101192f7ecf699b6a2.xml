        gsftSubmit(null, g_form.getFormElement(), 'create_vehicle');
		
} else {
    return false;
}
}

if (typeof window == 'undefined')
    createVehicle();

function createVehicle(){

	var ritm=new GlideRecord("sc_req_item");
	ritm.get(current.request_item);
	gs.info('ritm:'+current.request_item);
	
	var task=new GlideRecord("sc_task");
	task.get(current.sys_id);
	gs.info('task:'+current.sys_id);
	
	var asset = new GlideRecord("x_114019_fleet_man_vehicle_asset");
	asset.initialize();
	asset.model_category='b6d5822a2f7730101192f7ecf699b66c';
	asset.model=ritm.variables.series;	
	ritm.configuration_item=asset.ci;
	asset.insert();
	
	asset.reserved_for=ritm.requested_for;
	asset.install_status='2';
	asset.update();

	task.cmdb_ci=asset.ci;
	
	task.update();
	ritm.update();

	action.setRedirectURL(asset);
	
}]]></script>
